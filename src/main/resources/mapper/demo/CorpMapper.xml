<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rczmm.demo.mapper.CorpMapper">
    <resultMap type="Corp" id="CorpResult">
        <result property="id" column="id"/>
        <result property="pid" column="pid"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="status" column="status"/>
        <result property="description" column="description"/>
        <result property="createTime" column="createTime"/>
        <result property="updateTime" column="updateTime"/>
    </resultMap>

    <sql id="tableName">
        corp
    </sql>

    <sql id="columnList">
        id,pid,name,type,status,description,createTime,updateTime
    </sql>

    <sql id="selectCorpVo">
        SELECT
        <include refid="columnList"/>
        FROM
        <include refid="tableName"/>
    </sql>

    <select id="selectCorpList" parameterType="Corp" resultMap="CorpResult">
        <include refid="selectCorpVo"/>
        <where>
            <if test="corp.pid != null ">and pid = #{corp.pid}</if>
            <if test="corp.name != null  and corp.name != ''">and name like concat('%', #{corp.name}, '%')</if>
            <if test="corp.type != null  and corp.type != ''">and type = #{corp.type}</if>
            <if test="corp.status != null  and corp.status != ''">and status = #{corp.status}</if>
            <if test="corp.description != null  and corp.description != ''">and description = #{corp.description}</if>
            <if test="corp.createTime != null ">and createTime = #{corp.createTime}</if>
            <if test="corp.updateTime != null ">and updateTime = #{corp.updateTime}</if>
        </where>
    </select>

    <select id="selectCorpById" parameterType="Long" resultMap="CorpResult">
        <include refid="selectCorpVo"/>
        WHERE id = #{id}
    </select>

    <insert id="insertCorp" parameterType="Corp">
        INSERT INTO
        <include refid="tableName"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="corp.id != null">id,</if>
            <if test="corp.pid != null">pid,</if>
            <if test="corp.name != null and corp.name != ''">name,</if>
            <if test="corp.type != null and corp.type != ''">type,</if>
            <if test="corp.status != null and corp.status != ''">status,</if>
            <if test="corp.description != null and corp.description != ''">description,</if>
            <if test="corp.createTime != null">createTime,</if>
            <if test="corp.updateTime != null">updateTime,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="corp.id != null">#{corp.id},</if>
            <if test="corp.pid != null">#{corp.pid},</if>
            <if test="corp.name != null and name != ''">#{corp.name},</if>
            <if test="corp.type != null and type != ''">#{corp.type},</if>
            <if test="corp.status != null and status != ''">#{corp.status},</if>
            <if test="corp.description != null and description != ''">#{corp.description},</if>
            <if test="corp.createTime != null">#{corp.createTime},</if>
            <if test="corp.updateTime != null">#{corp.updateTime},</if>
        </trim>
    </insert>

    <update id="updateCorp" parameterType="Corp">
        UPDATE
        <include refid="tableName"/>
        <trim prefix="SET" suffixOverrides=",">
            <if test="corp.pid != null">pid = #{corp.pid},</if>
            <if test="corp.name != null and corp.name != ''">name = #{corp.name},</if>
            <if test="corp.type != null and corp.type != ''">type = #{corp.type},</if>
            <if test="corp.status != null and corp.status != ''">status = #{corp.status},</if>
            <if test="corp.description != null and corp.description != ''">description = #{corp.description},</if>
            <if test="corp.createTime != null">createTime = #{corp.createTime},</if>
            <if test="corp.updateTime != null">updateTime = #{corp.updateTime},</if>
        </trim>
        WHERE id = #{id}
    </update>

    <delete id="deleteCorpById" parameterType="Long">
        DELETE
        FROM
        <include refid="tableName"/>
        WHERE id = #{id}
    </delete>

    <delete id="deleteCorpByIds" parameterType="String">
        DELETE FROM
        <include refid="tableName"/>
        WHERE id IN
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>